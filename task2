import random

def number_guessing_game():
    print(" Welcome to the Number Guessing Game!")
    print("I'm thinking of a number between 1 and 100.")
    print("Can you guess what it is? ")
    print("-" * 45)

    secret_number = random.randint(1, 100)
    attempts = 0

    while True:
        user_input = input(" Enter your guess (1â€“100): ")

        # Validate the input
        if not user_input.isdigit():
            print(" That's not a number! Please enter a whole number between 1 and 100.")
            continue

        guess = int(user_input)
        attempts += 1

        if guess < 1 or guess > 100:
            print(" Please stay within the 1â€“100 range.")
        elif guess < secret_number:
            print(" Too low! Try a higher number.")
        elif guess > secret_number:
            print(" Too high! Try a lower number.")
        else:
            print(f"\n Congrats! You guessed it right in {attempts} attempts! ğŸŠ")
            print(f"The secret number was: {secret_number}")
            break

    print(" Thanks for playing! See you next time!")

if __name__ == "__main__":
    number_guessing_game()
